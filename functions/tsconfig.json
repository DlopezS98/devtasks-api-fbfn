{
  "compilerOptions": {
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/api/types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Application/*": ["src/application/*"],
      "@Domain/*": ["src/domain/*"],
      "@Infrastructure/Firebase/*": ["src/infrastructure/*"],
      "@Infrastructure/Mongo/*": ["src/infrastructure-mongo/*"],
      "@Api/*": ["src/api/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
